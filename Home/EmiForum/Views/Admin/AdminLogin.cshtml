@{
    ViewBag.Title = "AdminLogin";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("AdminLogin", "Admin"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>
            <h2>
                管理员登录</h2>
        </legend>
        <div class="editor-label">
            <label for="Poster">
                帐号</label>
        </div>
        <div class="editor-field">
            <input type="text" value="" name="Username" id="Username" class="text-box single-line">
            <span data-valmsg-replace="true" data-valmsg-for="Username" class="field-validation-valid">
            </span>
        </div>
        <div class="editor-label">
            <label for="Password">
                密码</label>
        </div>
        <div class="editor-field">
            <input type="password" name="Password" id="Password" />
            <span data-valmsg-replace="true" data-valmsg-for="Password" class="field-validation-valid">
            </span>
        </div>
        <p>
            <input type="submit" value="登录" />
        </p>
    </fieldset>
}