@model IEnumerable<EmiForum.Models.Entity.PostInfo>
@{
    ViewBag.Title = "欢迎光临 - wysky の留言板";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "Home"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>
            <h2>
                发表留言</h2>
        </legend>
        <div class="editor-label">
            <label for="Poster">
                昵称</label>
        </div>
        <div class="editor-field">
            <input type="text" value="" name="Poster" id="Poster" class="text-box single-line">
            <span data-valmsg-replace="true" data-valmsg-for="Poster" class="field-validation-valid">
            </span>
        </div>
        <div class="editor-label">
            <label for="Content">
                内容</label>
        </div>
        <div class="editor-field">
            <textarea rows="2" name="Content" id="Content" cols="20"></textarea>
            <span data-valmsg-replace="true" data-valmsg-for="Content" class="field-validation-valid">
            </span>
        </div>
        <p>
            <input type="submit" value="发表" />
        </p>
    </fieldset>
}
<fieldset>
    <legend>
        <h2>
            留言列表</h2>
    </legend>
    <ul id="post_list">
        @foreach (var item in Model)
        {
            <li class="post_info">
                <div class="postheader">
                    <span class="poster">@item.Poster</span><span class="date">(@String.Format("{0:g}", item.PostDate))</span></div>
                <div class="content">@item.Content</div>
            </li>
        }
    </ul>
</fieldset>
