<controls:ChildWindow x:Class="HaoRan.WebCam.CWMessageBox"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="396" Height="146"
           Title="操作信息">
  <Grid x:Name="LayoutRoot" Margin="2" Background="#FF98DAFF">
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Height="Auto" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="14" Name="Message" Text="显示内容"  Width="Auto" Grid.Row="0" />
        </StackPanel>
        <Button x:Name="Close" Content="关 闭" Click="CloseButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" /> 
    </Grid>
</controls:ChildWindow>